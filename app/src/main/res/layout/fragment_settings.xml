<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg_buttons"
        android:orientation="vertical"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/cbLocationSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="10dp"
            android:text="Automatically detect the location"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:button="@drawable/custom_checkbox"/>

        <LinearLayout
            android:id="@+id/llLocationSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="Your location:"
                android:textColor="@android:color/black"
                android:textSize="21sp"/>

            <EditText
                android:id="@+id/etLocationSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:background="@color/white"
                android:inputType="text"
                android:hint="Location..."
                android:textColor="@android:color/black"
                android:textSize="21sp"/>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_bg_buttons"
            android:orientation="vertical"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/cbNotificationsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="Enable notifications"
                android:textColor="@android:color/black"
                android:textSize="21sp"
                android:button="@drawable/custom_checkbox"/>

        </LinearLayout>

</LinearLayout>
</ScrollView>